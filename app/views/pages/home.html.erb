<div class="h-auto container mx-auto">
  <h1 class="text-5xl text-center">Recipe Generator</h1>
</div>

<div class="container mx-auto px-64">
  <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="recipe[name]">
        Name
      </label>
      <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="recipe[name]" type="text" placeholder="UsernameThe name of the recipe.">
    </div>
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="recipe[difficulty]">
        Difficulty
      </label>
      <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="recipe[difficulty]" type="number" min="0" max="5" placeholder="Up to five.">
    </div>
    <div class="flex items-center justify-between">
      <%= link_to "Generate a Recipe Randomly", recipes_generate_path, { class: "hover:bg-red-700 text-white font-bold w-full py-2 px-4 rounded bg-red-600 text-center" } %>
    </div>
  </form>
</div>
