<div class="h-auto container mx-auto">
  <h1 class="text-5xl text-center">Recipe Generator</h1>
</div>

<div class="container mx-auto px-64">
  <%= form_with scope: :recipe, url: recipes_generate_path, method: :get, local:true, html: { class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" } do |f| %>
    <div class="mb-4">
      <%= f.label :name, "Name", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "The name of the recipe." %>
    </div>
    <div class="mb-4">
      <%= f.label :difficulty, "Difficulty", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.number_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", min: "0", max: "5", placeholder: "Up to five." %>
    </div>
    <div class="flex items-center justify-between">
      <%= f.submit "Generate a Recipe Randomly", { class: "hover:bg-red-700 text-white font-bold w-full py-2 px-4 rounded bg-red-600 text-center" } %>
    </div>
  <% end %>
</div>
