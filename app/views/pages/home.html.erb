<div class="flex flex-col justify-center bg-red-500 h-screen w-screen pb-64">
  <div>
    <h1 class="text-5xl text-center text-white mb-10">Recipe Generator</h1>
  </div>
  <div x-data="{name:''}" data-controller="search" data-search-url="<%= recipes_suggest_path() %>" class="container mx-auto rounded px-8 pb-40">
    <div class="bg-white flex items-center rounded-full shadow-xl">
      <input x-model="name"
             data-action="input->search#suggest"
             data-target="search.name"
             class="rounded-l-full w-full py-4 px-6 text-gray-700 leading-tight focus:outline-none" id="search" type="text" placeholder="Search">
      <div class="p-4">
      </div>
    </div>
    <div x-show="name.length" class="mt-1 rounded-md shadow-lg">
      <div class="rounded-md bg-white shadow-xs">
        <div data-target="search.recipes" class="py-1" role="menu" aria-orientation="vertical" aria-labelledby="options-menu">
        </div>
      </div>
    </div>
  </div>
</div>
