<div class="bg-red-500 w-full h-full">
  <div class="container mx-auto divide-y pt-4 pb-4 px-64">
    <div class="bg-gray-100 px-4 py-5 border-b rounded-t-lg border-gray-200 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Recipes Search Histories</h3>
    </div>
    <div class="flex flex-col bg-white divide-y divide-gray shadow-xl">
      <% @search_histories.each do |search| %>
      <div class="grid grid-cols-2 p-6 gap-8">
        <div class="">
          <div class="text-sm font-medium text-gray-500">Keyword</div>
          <div class="">
            <div class="">
              <%= link_to search.keyword, recipes_search_path(name: search.keyword) %>
            </div>
          </div>
        </div>
        <div class="">
          <div class="text-sm font-medium text-gray-500">Search At</div>
          <div class=""><%= search.created_at.strftime("%F %T") %></div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
